import time
import random

# --- Funciones de Ejercicios ---

def ejercicio_clasificador_numeros():
    """Pide un nÃºmero entero y clasifica si es positivo, negativo o cero."""
    print("\n--- ğŸš€ Ejercicio 1: Clasificador de nÃºmeros ğŸš€ ---")
    try:
        numero = int(input("Ingrese un nÃºmero entero: "))
        if numero > 0:
            print(f"El nÃºmero {numero} es positivo. ğŸ‘")
        elif numero < 0:
            print(f"El nÃºmero {numero} es negativo. ğŸ‘")
        else:
            print(f"El nÃºmero {numero} es cero.  neutral") # O algÃºn emoji neutral
    except ValueError:
        print("Error: Por favor, ingrese solo nÃºmeros enteros. ğŸš«")
    print("--- âœ¨ Fin Ejercicio 1 âœ¨ ---")
    time.sleep(1)

def ejercicio_aprobado_reprobado():
    """Pide una calificaciÃ³n y determina si estÃ¡ aprobado o reprobado."""
    print("\n--- ğŸ“š Ejercicio 2: Aprobado o reprobado ğŸ“š ---")
    try:
        nota = float(input("Ingrese la calificaciÃ³n del estudiante (0 a 100): "))
        if nota < 0 or nota > 100:
            print("Error: Por favor, ingrese un nÃºmero dentro del rango especificado (0 a 100). ç¯„åœ") # Emoji de rango
        elif nota < 60:
             print("Usted es un vago, reprobÃ³ la materia. ğŸ˜")
        else:
             print("MÃ¡quina, ganaste la materia. ğŸ˜")
    except ValueError:
        print("Error: Por favor, ingrese un nÃºmero vÃ¡lido para la calificaciÃ³n. ğŸ”¢")
    print("--- âœ¨ Fin Ejercicio 2 âœ¨ ---")
    time.sleep(1)

def ejercicio_tabla_multiplicar():
    """Muestra la tabla de multiplicar de un nÃºmero del 1 al 10."""
    print("\n--- âœ–ï¸ Ejercicio 3: Tabla de multiplicar âœ–ï¸ ---")
    try:
        num = int(input("Ingrese un nÃºmero para ver su tabla de multiplicar: "))
        print(f"\nTabla de multiplicar del {num}:")
        for puesto in range(1, 11):
            print(f"{num} X {puesto} = {num * puesto}")
    except ValueError:
        print("Error: Por favor, ingrese solo nÃºmeros enteros. ğŸ§±") # Emoji de bloque o nÃºmero
    print("--- âœ¨ Fin Ejercicio 3 âœ¨ ---")
    time.sleep(1)

def ejercicio_contador_regresivo():
    """Realiza una cuenta regresiva desde un nÃºmero dado hasta 0."""
    print("\n--- â±ï¸ Ejercicio 4: Contador regresivo â±ï¸ ---")
    try:
        num = int(input("Ingrese un nÃºmero entero positivo para la cuenta regresiva: "))
        if num < 0:
            print("Error: Por favor, ingrese un nÃºmero positivo. ğŸš«")
            return
        print("\nIniciando cuenta regresiva...")
        while num > 0:
            time.sleep(0.5)
            print(f"Su computador explotarÃ¡ en {num} segundos... ğŸ’£")
            num -= 1
        print("Â¡BOOM! ğŸ’¥") # Mensaje final
    except ValueError:
        print("Error: Por favor, ingrese solo nÃºmeros enteros. ğŸ”¢")
    print("--- âœ¨ Fin Ejercicio 4 âœ¨ ---")
    time.sleep(1)

def ejercicio_adivina_numero():
    """Juego de adivinar un nÃºmero aleatorio entre 1 y 10 en 3 intentos."""
    print("\n--- ğŸ² Ejercicio 5: Adivina el nÃºmero ğŸ² ---")
    intentos = 3
    numero_aleatorio = random.randint(1, 10)
    print("Â¡Bienvenido al juego de adivinar el nÃºmero! ğŸ®")
    print("He elegido un nÃºmero entre 1 y 10. Tienes 3 intentos.")

    while intentos > 0:
        try:
            print(f"\nIntentos restantes: {intentos} â¤ï¸") # Emoji de vida/intento
            numero_usuario = int(input("Introduce tu nÃºmero: "))
            if numero_usuario < 1 or numero_usuario > 10:
                print("Por favor, introduce un nÃºmero entre 1 y 10. â¡ï¸â¬…ï¸") # Emoji de flechas
                continue

            if numero_usuario == numero_aleatorio:
                print("Â¡Felicidades! Adivinaste el nÃºmero. ğŸ‰ğŸ¥³")
                break
            elif numero_usuario < numero_aleatorio:
                print("El nÃºmero es mayor. Intenta de nuevo. â¬†ï¸")
            else:
                print("El nÃºmero es menor. Intenta de nuevo. â¬‡ï¸")

            intentos -= 1
            if intentos > 0:
                 time.sleep(1)

        except ValueError:
            print("Error: Por favor, introduce un nÃºmero vÃ¡lido. ğŸ¤”")

    if intentos == 0:
        print(f"\nLo siento, has agotado tus intentos. El nÃºmero era {numero_aleatorio}. ğŸ’”")
    print("--- âœ¨ Fin Ejercicio 5 âœ¨ ---")
    time.sleep(1)

# --- FunciÃ³n del MenÃº ---

def mostrar_menu():
    """Muestra el menÃº de opciones y pide la elecciÃ³n del usuario."""
    print("\n" + "â•" * 40) # Usando caracteres dobles para el borde
    print("         ğŸ“– MenÃº de Ejercicios ğŸ“–")
    print("â•" * 40)
    print("1. â•â– Ejercicio 1: Clasificador de nÃºmeros")
    print("2. âœ…âŒ Ejercicio 2: Aprobado o reprobado")
    print("3. âœ–ï¸ğŸ”¢ Ejercicio 3: Tabla de multiplicar")
    print("4. â³ğŸ“‰ Ejercicio 4: Contador regresivo")
    print("5. ğŸ¤”ğŸ² Ejercicio 5: Adivina el nÃºmero")
    print("6. ğŸšª Salir")
    print("â•" * 40)
    eleccion = input("Introduce el nÃºmero del ejercicio que deseas ejecutar: ")
    return eleccion

# --- Mapa de Ejercicios (SimulaciÃ³n de Switch-Case) ---

mapa_ejercicios = {
    "1": ejercicio_clasificador_numeros,
    "2": ejercicio_aprobado_reprobado,
    "3": ejercicio_tabla_multiplicar,
    "4": ejercicio_contador_regresivo,
    "5": ejercicio_adivina_numero
}

# --- LÃ³gica Principal del Programa ---

if __name__ == "__main__":
    print("ğŸŒŸ Â¡Bienvenido al centro de ejercicios de Python! ğŸŒŸ")
    ejecutando = True

    while ejecutando:
        opcion_elegida = mostrar_menu()

        funcion_a_ejecutar = mapa_ejercicios.get(opcion_elegida)

        if funcion_a_ejecutar:
            funcion_a_ejecutar()
        elif opcion_elegida == "6":
            print("\nğŸ‘‹ Saliendo del programa. Â¡AdiÃ³s, Coder! ğŸ‘‹")
            ejecutando = False
        else:
            print("\nğŸš« OpciÃ³n no vÃ¡lida. Por favor, introduce un nÃºmero del 1 al 6. ğŸ§")
            time.sleep(1)

    print("âœ… Programa finalizado. âœ…")
